<structure xmlns="https://ProfessionalWiki.github.io/chameleon/schema/3.0/layout.rng">

	<!-- Main -->
	<grid class="flex-fill" mode="fluid">
		<row class="flex-xl-nowrap mt-0">
			<cell class="col-12 px-0">
				<component type="Html">
					<![CDATA[
							<nav class="navbar nav-shadow bg-white">
					]]>
				</component>
				<cell class="col-2">
					<component type="Logo" addLink="yes"/>
					<component type="Html"><![CDATA[
							<span >REV: 5</span>
						]]></component>
				</cell>
				<cell class="col-8">
					<component type="PersonalTools" hideNewtalkNotifier="yes"/>
				</cell>
				<cell class="col-2">
					<component type="SearchBar" buttons="go"/>
				</cell>

				<component type="Html">
					<![CDATA[
							</nav>
					]]>
				</component>
			</cell>
		</row>
		<row class="flex-xl-nowrap">
			<!-- Left Column -->
			<cell class="col-12 col-md-3 col-xl-2 position-sticky bg-1 py-3">
				<component type="NavMenu"/>
			</cell>
			<!-- Center Column -->
			<cell class="col-12 col-md-9 col-xl-8 ">
				<row class="mt-3 px-4">
					<cell class="col-6 col-md-3 ml-2">

					</cell>
				</row>
				<row class="mt-1">
					<cell class="col-12">
						<component type="PageTools"/>
						<component type="MainContent"/>
					</cell>
				</row>
			</cell>
			<!-- Right Column -->
			<cell class="d-none d-xl-block col-xl-2 pt-4 pl-0">

			</cell>
		</row>


	</grid>
	<!-- Footer -->
	<grid class="mb-2 mt-4" mode="fluid">
		<row class="bg-luh-gray py-2">
			<cell class="col-12 col-md-2">
				<component type="NavbarHorizontal" collapsible="no" class="small my-3 bg-luh-gray" >
					<component type="Toolbox" flatten="no" class="dropup"/>
				</component>
			</cell>
			<cell class="col-12 col-md-8">
				<row>
					<cell class="col-12 col-md-4 image-luh"></cell>
					<cell class="col-12 col-md-4 image-luh"></cell>
					<cell class="col-12 col-md-4 image-luh"></cell>
				</row>
			</cell>
			<cell class="col-12 col-md-2">

			</cell>
		</row>
		<row>
			<cell>
				<component type="FooterInfo"/>
				<component type="FooterPlaces"/>
			</cell>
			<cell>
				<component type="FooterIcons" class="justify-content-end"/>
			</cell>
		</row>
	</grid>
	<component type="Html"><![CDATA[
  		<script>
  			$( document ).ready(function() {
				if($('#tab-facts-list').length ) {
					$('#tab-facts-list').attr("data-toggle", "collapse");
					$('#tab-facts-list').attr("data-target", ".smwfact");
					$('.smwfact').removeAttr("style");
				}
			});
  		</script>
	]]></component>
</structure>
